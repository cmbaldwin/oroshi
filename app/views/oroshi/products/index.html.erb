<%= turbo_frame_tag 'products', class: 'card' do %>
<div class="card-body">
    <div class="card-title d-flex justify-content-between align-items-center align-middle">
        <h5 class="mb-0"><%= t('oroshi.products.index.title') %></h5>
        <%= link_to icon('arrow-clockwise'), oroshi_dashboard_products_path, class: 'btn btn-sm btn-light', data: { turbo_frame: 'dashboard_frame' } %>
    </div>
    <% if @products %>
    <div class="list-group mb-3 overflow-auto border" style="max-height: 70vh;">
        <% @products.each do |product| %>
        <% link_class = 'positionable-item list-group-item list-group-item-action d-flex justify-content-between align-items-start' %>
        <% link_class += ' active' if @products.first == product %>
        <% link_class += ' list-group-item-light opacity-50' unless product.active %>
        <%= link_to load_oroshi_product_path(product),
                      class: link_class,
                      data: {
                        turbo_frame: 'product_settings',
                        action: 'oroshi--dashboard#toggleActiveListItem:passive'
                      } do %>
        <div class="ms-2 me-auto overflow-hidden">
            <div class="fw-bold"><%= product.to_s %></div>
        </div>
        <span class="badge bg-info rounded-pill"><%= product.product_variations.active.count %></span>
        <% end %>
        <% end %>
    </div>
    <% else %>
    <div class="alert alert-warning" role="alert">
        <%= t('oroshi.products.index.no_products_warning') %>
    </div>
    <% end %>
    <h6 class="card-subtitle mb-2 d-flex justify-content-between align-items-center align-middle">
        <%= content_tag :div, class: 'form-check form-switch d-flex justify-content-between align-items-center align-middle' do %>
        <%= content_tag :input, 
                        nil, 
                        class: 'form-check-input me-2', 
                        type: 'checkbox', 
                        id: 'activeToggle', 
                        data: { 
                          action: 'change->oroshi--dashboard#toggleShowInactive',
                          target: 'products'
                        }, 
                        checked: @show_inactive %>
        <%= label_tag 'activeToggle', t('oroshi.dashboard.display_all'), class: 'form-check-label' %>
        <% end %>
        <%= link_to t('oroshi.dashboard.add_record'),
                  new_oroshi_product_path,
                  class: 'btn btn-sm btn-success',
                  data: {
                    turbo_frame: 'oroshi_modal_content',
                    action: 'oroshi--dashboard#showModal:passive'
                  } %>
    </h6>
</div>
<% end %>