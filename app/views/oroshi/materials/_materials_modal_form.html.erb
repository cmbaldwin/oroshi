<%= turbo_frame_tag 'materials_modal_form' do %>
  <%= form_with model: @material, 
                      data: {
                        action: 'oroshi--dashboard#modalFormSubmit:prevent',
                        refresh_target: 'oroshi_material_category_materials'
                      } do |form| %>
    <%= render 'form', form: form %>
    <%= form.submit t('common.buttons.save'), class: 'btn btn-primary my-2' %>
  <% end %>
<% end %>