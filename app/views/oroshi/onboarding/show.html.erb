<%= form_with url: oroshi_onboarding_path(@step), method: :patch, id: "onboarding-form", local: true do |f| %>
  <% partial_path = "oroshi/onboarding/steps/#{@step}" %>
  <% if lookup_context.template_exists?(partial_path, [], true) %>
    <%= render partial: partial_path, locals: { f: f } %>
  <% else %>
    <h2 class="mb-4"><%= @step.titleize %></h2>
    <div class="alert alert-info">
      <strong>Coming soon:</strong> Form fields for <%= @step %> configuration.
    </div>
  <% end %>
<% end %>
