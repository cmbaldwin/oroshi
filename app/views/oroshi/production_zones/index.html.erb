<%= turbo_frame_tag 'production_zones', class: 'card' do %>
  <div class="card-body">
    <div class="card-title d-flex justify-content-between align-items-center align-middle">
      <div class="d-flex flex-grow-1 justify-content-between align-items-center align-middle me-2">
        <h4 class="m-0">
          <%= Oroshi::ProductionZone.model_name.human %>
        </h4>
        <%= information_tippy('production_zones') %>
      </div>
      <%= link_to t('oroshi.dashboard.add_record'),
            new_oroshi_production_zone_path,
            class: 'btn btn-sm btn-success',
            data: {
              turbo_frame: 'oroshi_modal_content',
              action: 'oroshi--dashboard#showModal:passive'
            } %>
    </div>
    <% if @production_zones.exists? %>
      <div class="list-group">
        <% @production_zones.each do |production_zone| %>
          <%= turbo_frame_tag dom_id(production_zone),
                              class: 'list-group-item list-group-item-primary',
                              src: edit_oroshi_production_zone_path(production_zone),
                              loading: 'lazy' do %>
            <div class="d-flex w-100 text-center justify-content-center align-items-center align-middle">
              <div class="spinner-border spinner-border-sm" role="status">
                <span class="visually-hidden"><%= t('oroshi.production_zones.index.loading') %></span>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="alert alert-warning" role="alert">
        <%= t('oroshi.dashboard.no_record_warning', model_name: Oroshi::ProductionZone.model_name.human) %>
      </div>
    <% end %>
  </div>
<% end %>