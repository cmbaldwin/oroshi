<%# Onboarding overlay modal for completing steps from checklist %>
<div class="modal modal-fullscreen fade" id="onboardingModal" tabindex="-1" aria-labelledby="onboardingModalLabel" aria-hidden="true"
     data-controller="onboarding-modal">
  <div class="modal-dialog modal-dialog-centered modal-xl">
    <%= turbo_frame_tag 'onboarding_modal_content', class: 'modal-content onboarding-modal-content' do %>
      <div class="modal-body text-center py-5">
        <div class="spinner-border text-primary" role="status">
          <span class="visually-hidden"><%= t('common.messages.loading') %></span>
        </div>
      </div>
    <% end %>
  </div>
</div>

<style>
  .onboarding-modal-content {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 80vh;
    border: none;
    border-radius: 1rem;
  }

  .onboarding-modal-header {
    background: transparent;
    border-bottom: none;
    padding: 1.5rem 2rem;
  }

  .onboarding-modal-header .btn-close {
    filter: invert(1);
  }

  .onboarding-modal-brand {
    font-family: 'Playfair Display', serif;
    font-weight: 900;
    font-size: 1.5rem;
    color: #ffffff;
    letter-spacing: -0.03em;
  }

  .onboarding-modal-body {
    padding: 0 2rem 2rem;
  }

  .onboarding-modal-card {
    background: #ffffff;
    border-radius: 1rem;
    padding: 2rem;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    max-width: 600px;
    margin: 0 auto;
  }

  .onboarding-modal-footer {
    background: transparent;
    border-top: none;
    padding: 1rem 2rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .btn-onboarding-modal-close {
    background: rgba(255, 255, 255, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.3);
    color: #ffffff;
    padding: 0.5rem 1.5rem;
    border-radius: 0.5rem;
    font-weight: 500;
    transition: all 0.2s;
  }

  .btn-onboarding-modal-close:hover {
    background: rgba(255, 255, 255, 0.3);
    color: #ffffff;
  }

  .btn-onboarding-modal-save {
    background: #ffffff;
    color: #667eea;
    padding: 0.5rem 2rem;
    border-radius: 0.5rem;
    font-weight: 600;
    border: none;
    transition: all 0.2s;
  }

  .btn-onboarding-modal-save:hover {
    background: #f8f9fa;
    transform: translateY(-1px);
  }
</style>
