<%= turbo_frame_tag 'supplier_organization', class: 'card m-1 overflow-y-scroll' do  %>
<% if @supplier_organization %>
<div class="card-body">
    <div class="d-flex justify-content-between align-items-center align-middle">
        <div class="d-flex justify-content-start align-items-center align-middle">
            <h5 class="m-0">
                <%= t('oroshi.dashboard.edit_message', 
                  entity_name: @supplier_organization.entity_name, 
                  model_name: Oroshi::SupplierOrganization.model_name.human) %>
            </h5>
        </div>
        <%= information_tippy('suppliers_organizations_edit') %>
    </div>
    <%= form_with model: @supplier_organization,
                    html: {
                      class: 'rounded border bg-light p-2 frame collapse show mt-2'
                    },
                    data: {
                      controller: 'oroshi--supply-settings-form',
                    } do |form| %>
    <%= render partial: 'form', locals: { form: form } %>
    <% end %>
</div>
<% else %>
<div class="alert alert-warning" role="alert">
    <%= t('oroshi.dashboard.no_record_warning', model_name: Oroshi::SupplierOrganization.model_name.human) %>
</div>
<% end %>
<% end %>