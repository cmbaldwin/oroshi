#!/bin/bash -e

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

# If running the rails server then create or migrate existing database
if [ "${@: -2:1}" == "./bin/rails" ] && [ "${@: -1:1}" == "server" ]; then
  ./bin/rails db:prepare

  # Initialize Solid Queue schema if needed
  if ! ./bin/rails runner "SolidQueue::Job.first rescue false" 2>/dev/null; then
    echo "Initializing Solid Queue schema..."
    ./bin/rails runner "
      ActiveRecord::Base.connected_to(role: :writing, shard: :queue) do
        load 'db/queue_schema.rb'
      end
    " 2>/dev/null || echo "Solid Queue schema already exists or failed to load"
  fi

  # Initialize Solid Cache schema if needed
  if ! ./bin/rails runner "SolidCache::Entry.first rescue false" 2>/dev/null; then
    echo "Initializing Solid Cache schema..."
    ./bin/rails runner "
      ActiveRecord::Base.connected_to(role: :writing, shard: :cache) do
        load 'db/cache_schema.rb'
      end
    " 2>/dev/null || echo "Solid Cache schema already exists or failed to load"
  fi

  # Initialize Solid Cable schema if needed
  if ! ./bin/rails runner "SolidCable::Message.first rescue false" 2>/dev/null; then
    echo "Initializing Solid Cable schema..."
    ./bin/rails runner "
      ActiveRecord::Base.connected_to(role: :writing, shard: :cable) do
        load 'db/cable_schema.rb'
      end
    " 2>/dev/null || echo "Solid Cable schema already exists or failed to load"
  fi
fi

exec "${@}"
