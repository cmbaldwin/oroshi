<%# Onboarding overlay modal for completing steps from checklist %>
<%# Styles are in app/assets/stylesheets/onboarding.scss %>
<div class="modal modal-fullscreen fade" id="onboardingModal" tabindex="-1" aria-labelledby="onboardingModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-xl">
    <%= turbo_frame_tag 'onboarding_modal_content', class: 'modal-content onboarding-modal-content' do %>
      <div class="modal-body text-center py-5">
        <div class="spinner-border text-primary" role="status">
          <span class="visually-hidden"><%= t('common.messages.loading') %></span>
        </div>
      </div>
    <% end %>
  </div>
</div>
