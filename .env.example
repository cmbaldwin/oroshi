# Oroshi Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file with real credentials!

#==============================================================================
# DEPLOYMENT CONFIGURATION (Required for Kamal deployment)
#==============================================================================

# Production server IP address
KAMAL_HOST=your.server.ip.address

# Production domain name
KAMAL_DOMAIN=your-domain.com

# AWS ECR Registry URL (format: ACCOUNT_ID.dkr.ecr.REGION.amazonaws.com)
AWS_ECR_REGISTRY=123456789012.dkr.ecr.us-east-1.amazonaws.com

# AWS ECR Region (default: ap-southeast-2)
AWS_ECR_REGION=ap-southeast-2

# GCS Credentials file path (relative to project root)
GCS_CREDENTIALS_FILE=gcs-credentials.json

# GCS Credentials path inside Docker container (optional)
GCLOUD_CREDENTIALS_PATH=/rails/config/gcloud/credentials.json

#==============================================================================
# 1PASSWORD CONFIGURATION (for secret management)
#==============================================================================

# Your 1Password account ID (REQUIRED for deployment)
# Find this in your 1Password account settings
ONEPASSWORD_ACCOUNT_ID=your_account_id_here

# Your 1Password vault name
ONEPASSWORD_VAULT=Oroshi/Production

#==============================================================================
# RAILS CONFIGURATION
#==============================================================================

# Rails environment (development, test, production)
RAILS_ENV=development

# Rails master key (generate with: rails credentials:edit)
RAILS_MASTER_KEY=your_master_key_here

# Secret key base (generate with: rails secret)
SECRET_KEY_BASE=your_secret_key_base_here

#==============================================================================
# ACTIVE RECORD ENCRYPTION
#==============================================================================

# Generate with: rails db:encryption:init
ACTIVE_RECORD_ENCRYPTION_PRIMARY_KEY=your_primary_key_here
ACTIVE_RECORD_ENCRYPTION_DETERMINISTIC_KEY=your_deterministic_key_here
ACTIVE_RECORD_ENCRYPTION_KEY_DERIVATION_SALT=your_key_derivation_salt_here

#==============================================================================
# DATABASE CONFIGURATION
#==============================================================================

# Database host (use 'oroshi-db' for production Docker, 'localhost' for dev)
DB_HOST=localhost

# Database port
DB_PORT=5432

# Database name
POSTGRES_DB=oroshi_development

# Database username
POSTGRES_USER=oroshi

# Database password
POSTGRES_PASSWORD=your_secure_password_here

#==============================================================================
# GOOGLE CLOUD STORAGE (for Active Storage)
#==============================================================================

# GCS Project ID
GCLOUD_PROJECT=your-gcp-project-id

# GCS Bucket name
GCLOUD_BUCKET=your-bucket-name

# GCS Backup prefix
GBUCKET_PREFIX=oroshi-db-backups

# Google Application Credentials (path to service account JSON)
# For development: path to local file
# For production: set in deploy.yml files configuration
GOOGLE_APPLICATION_CREDENTIALS=config/gcloud/credentials.json

#==============================================================================
# EMAIL CONFIGURATION (Resend)
#==============================================================================

# Resend API key (get from: https://resend.com/api-keys)
RESEND_API_KEY=re_your_api_key_here

# Email sender address (must be verified in Resend)
MAIL_SENDER=noreply@your-domain.com

#==============================================================================
# AUTHENTICATION (Devise)
#==============================================================================

# Devise secret key (generate with: rails secret)
DEVISE_KEY=your_devise_secret_key_here

#==============================================================================
# SSL CERTIFICATES (Cloudflare Origin Certificates - Production only)
#==============================================================================

# Cloudflare SSL certificate (PEM format)
CLOUDFLARE_SSL_CERT_PEM=-----BEGIN CERTIFICATE-----...-----END CERTIFICATE-----

# Cloudflare SSL private key (PEM format)
CLOUDFLARE_SSL_KEY_PEM=-----BEGIN PRIVATE KEY-----...-----END PRIVATE KEY-----

#==============================================================================
# OPTIONAL CONFIGURATION
#==============================================================================

# Web concurrency (number of processes)
WEB_CONCURRENCY=1

# Rails serve static files (set to 'true' for production)
RAILS_SERVE_STATIC_FILES=false

# Rails log to STDOUT (set to 'true' for production)
RAILS_LOG_TO_STDOUT=false

#==============================================================================
# DEVELOPMENT-ONLY SETTINGS
#==============================================================================

# Database name for development (optional, defaults shown)
# POSTGRES_DB=oroshi_development
