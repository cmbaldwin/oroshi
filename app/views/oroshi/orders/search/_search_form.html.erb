<div class="card m-3">
    <div class="card-header bg-info text-white">
        <%= t('.order_search') %>
    </div>
    <%= search_form_for @q, url: oroshi_search_orders_path, method: :get do |f| %>
    <div class="card-body d-flex flex-column">
        <div class="d-flex flex-wrap mb-3">
            <div class="p-2">
                <%= f.label :shipping_date_gteq, t('.shipping_date_gteq'), class: 'form-label' %>
                <%= f.text_field :shipping_date_gteq, 
                        class: "form-control form-control-sm text-center",
                        data: {
                            controller: "flatpickr",
                            init_date_time: params[:shipping_date_gteq]
                          } %>

                <%= f.label :shipping_date_lteq, t('.shipping_date_lteq'), class: 'form-label' %>
                <%= f.text_field :shipping_date_lteq, 
                        class: "form-control form-control-sm text-center",
                        data: {
                            controller: "flatpickr",
                            init_date_time: params[:shipping_date_lteq]
                          } %>
            </div>
            <div class="p-2">
                <%= f.label :arrival_date_gteq, t('.arrival_date_gteq'), class: 'form-label' %>
                <%= f.text_field :arrival_date_gteq, 
                        class: "form-control form-control-sm text-center",
                        data: {
                            controller: "flatpickr",
                            init_date_time: params[:arrival_date_gteq]
                          } %>

                <%= f.label :arrival_date_lteq, t('.arrival_date_lteq'), class: 'form-label' %>
                <%= f.text_field :arrival_date_lteq, 
                        class: "form-control form-control-sm text-center",
                        data: {
                            controller: "flatpickr",
                            init_date_time: params[:arrival_date_lteq]
                          } %>
            </div>
            <div class="p-2">
                <%= f.label :order_category_id_in, Oroshi::OrderCategory.model_name.human, class: 'form-label text-nowrap' %>
                <%= f.select :order_category_id_in, 
                    @order_categories.map { |oc| [oc.name, oc.id] }, 
                    { selected: params[:order_category_id_in] }, 
                    { multiple: true, class: 'form-select form-select-sm' } %>
            </div>
            <div class="p-2">
                <%= f.label :buyer_category_id_in, Oroshi::BuyerCategory.model_name.human, class: 'form-label' %>
                <%= f.select :buyer_category_id_in, 
                    @buyer_categories.map { |oc| [oc.name, oc.id] }, 
                    { selected: params[:buyer_category_id_in] }, 
                    { multiple: true, class: 'form-select form-select-sm' } %>
            </div>
            <div class="p-2">
                <%= f.label :buyer_id_in, Oroshi::Buyer.model_name.human, class: 'form-label' %>
                <%= f.select :buyer_id_in, 
                    @buyers.map { |buyer| [buyer.name, buyer.id] }, 
                    { }, 
                    { multiple: true, class: 'form-select form-select-sm' } %>
            </div>
            <div class="p-2">
                <%= f.label :shipping_organization_id_in, Oroshi::ShippingMethod.model_name.human, class: 'form-label' %>
                <%= f.select :shipping_organization_id_in, 
                    @shipping_organizations.map { |shipping_method| [shipping_method.name, shipping_method.id] }, 
                    { selected: @shipping_method_ids }, 
                    { multiple: true, class: 'form-select form-select-sm' } %>
            </div>
            <div class="p-2">
                <%= f.label :shipping_method_id_in, Oroshi::ShippingMethod.model_name.human, class: 'form-label' %>
                <%= f.select :shipping_method_id_in, 
                    @shipping_methods.map { |shipping_method| [shipping_method.name, shipping_method.id] }, 
                    { selected: @shipping_method_ids }, 
                    { multiple: true, class: 'form-select form-select-sm' } %>
            </div>
            <div class="p-2">
                <%= f.label :product_id_in, Oroshi::Product.model_name.human, class: 'form-label' %>
                <%= f.select :product_id_in, 
                    @products.map { |product| [product.name, product.id] }, 
                    { selected: @product_ids }, 
                    { multiple: true, class: 'form-select form-select-sm' } %>
            </div>
            <div class="p-2">
                <%= f.label :product_variation_id_in, Oroshi::ProductVariation.model_name.human, class: 'form-label' %>
                <%= f.select :product_variation_id_in, 
                    @product_variations.map { |pv| [pv.name, pv.id] }, 
                    { selected: @product_variation_ids }, 
                    { multiple: true, class: 'form-select form-select-sm' } %>
            </div>
            <div class="p-2">
                <%= f.label :shipping_receptacle_id_in, Oroshi::ShippingReceptacle.model_name.human, class: 'form-label' %>
                <%= f.select :shipping_receptacle_id_in, 
                    @shipping_receptacles.map { |sr| [sr.name, sr.id] }, 
                    { selected: @shipping_receptacle_ids }, 
                    { multiple: true, class: 'form-select form-select-sm' } %>
            </div>
        </div>
        <div>
            <%= f.submit class: 'btn btn-secondary' %>
        </div>
    </div>
    <% end %>
</div>