<%= turbo_frame_tag 'buyer_categories_modal_form' do %>
<%= form_with model: @buyer_category, 
                      defaults: { input_html: { class: 'mb-2' } },
                      data: {
                        action: 'oroshi--dashboard#modalFormSubmit:prevent',
                        refresh_target: 'buyer_categories'
                      } do |form| %>
<%= render 'form', form: form %>
<%= form.submit class: 'btn btn-primary my-2' %>
<% end %>
<% end %>