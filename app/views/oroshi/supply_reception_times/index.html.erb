<%= turbo_frame_tag 'supply_reception_times', class: 'card' do %>
  <div class="card-body">
    <div class="card-title d-flex justify-content-between align-items-center align-middle">
      <div class="d-flex flex-grow-1 justify-content-between align-items-center align-middle me-2">
        <h4 class="m-0">
          <%= Oroshi::SupplyReceptionTime.model_name.human %>
        </h4>
        <%= information_tippy('supply_reception_times') %>
      </div>
      <%= link_to t('oroshi.dashboard.add_record'),
            new_oroshi_supply_reception_time_path,
            class: 'btn btn-sm btn-success',
            data: {
              turbo_frame: 'oroshi_modal_content',
              action: 'oroshi--dashboard#showModal:passive'
            } %>
    </div>
    <% if @supply_reception_times %>
      <div class="list-group">
        <% @supply_reception_times.each do |supply_reception_time| %>
          <%= turbo_frame_tag dom_id(supply_reception_time),
                              class: 'list-group-item list-group-item-primary',
                              src: edit_oroshi_supply_reception_time_path(supply_reception_time),
                              loading: 'lazy' do %>
            <div class="d-flex w-100 text-center justify-content-center align-items-center align-middle">
              <div class="spinner-border spinner-border-sm" role="status">
                <span class="visually-hidden">読み込み中...</span>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="alert alert-warning" role="alert">
        <%= t('oroshi.dashboard.no_record_warning', model_name: Oroshi::SupplyReceptionTime.model_name.human) %>
      </div>
    <% end %>
  </div>
<% end %>