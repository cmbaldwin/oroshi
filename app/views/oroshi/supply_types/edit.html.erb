<%= turbo_frame_tag 'supply_type', class: 'card m-1 overflow-y-scroll' do  %>
<% if @supply_type %>
<div class="card-body">
    <div class="d-flex justify-content-between align-items-center align-middle">
        <div class="d-flex justify-content-start align-items-center align-middle">
            <h5 class="m-0">
                <%= t('oroshi.dashboard.edit_message', 
                  entity_name: @supply_type.name, 
                  model_name: Oroshi::SupplyType.model_name.human) %>
            </h5>
        </div>
        <%= information_tippy('supply_types') %>
    </div>
    <%= form_with model: @supply_type,
                    class: 'rounded border bg-light p-2 frame collapse show mt-2',
                    data: {
                      controller: 'oroshi--supply-settings-form',
                    } do |form| %>
    <%= render partial: 'form', locals: { form: form } %>
    <% end %>
</div>
<% else %>
<div class="alert alert-warning" role="alert">
    <%= t('oroshi.dashboard.no_record_warning', model_name: Oroshi::SupplyType.model_name.human) %>
</div>
<% end %>
<% end %>