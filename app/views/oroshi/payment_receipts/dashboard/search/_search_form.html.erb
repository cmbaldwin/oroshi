<div class="card m-3">
    <div class="card-header bg-info text-white">
        <%= t('.payment_receipt_search') %>
    </div>
    <%= search_form_for @q, url:  oroshi_payment_receipts_search_path, method: :get do |f| %>
    <div class="card-body d-flex flex-column">
        <div class="d-flex flex-wrap mb-3">
            <div class="p-2">
                <%= f.label :deposit_date_gteq, t('.deposit_date_gteq'), class: 'form-label' %>
                <%= f.text_field :deposit_date_gteq, 
                        class: "form-control form-control-sm text-center",
                        data: {
                            controller: "flatpickr",
                            init_date_time: params[:deposit_date_gteq]
                          } %>

                <%= f.label :deposit_date_lteq, t('.deposit_date_lteq'), class: 'form-label' %>
                <%= f.text_field :deposit_date_lteq, 
                        class: "form-control form-control-sm text-center",
                        data: {
                            controller: "flatpickr",
                            init_date_time: params[:deposit_date_lteq]
                          } %>
            </div>
            <div class="p-2">
                <%= f.label :buyer_id_in, Oroshi::Buyer.model_name.human, class: 'form-label' %>
                <%= f.select :buyer_id_in, 
                    @buyers.map { |buyer| [buyer.name, buyer.id] }, 
                    { }, 
                    { multiple: true, class: 'form-select form-select-sm' } %>
            </div>
            <div class="p-2">
                <%= f.label :id_eq, Oroshi::PaymentReceipt.human_attribute_name(:id), class: 'form-label' %>
                <%= f.text_field :id_eq, class: 'form-control form-control-sm' %>
            </div>
        </div>
        <div class="d-flex justify-content-start">
            <%= f.submit class: 'btn btn-secondary' %>
        </div>
    </div>
    <% end %>
</div>