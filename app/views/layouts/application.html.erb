<!doctype html>
<html dir="ltr" lang="ja" class="h-100">
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<meta name="description" content="<%= t('layouts.application.description') %>">
<meta name="author" content="Cody Baldwin">
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />

<head>
    <title><%= content_for?(:title) ? content_for(:title) : t('layouts.application.title') %></title>

    <%= capybara_lockstep if defined?(Capybara::Lockstep) %>
    <!--
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="船曳商店" />
    <link rel="manifest" href="/site.webmanifest" />
    -->

    <%= action_cable_meta_tag %>
    <%= turbo_refreshes_with method: :morph, scroll: :preserve  %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%# Bootstrap 5 CSS from CDN (modern Rails 8 approach) %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <%# Bootstrap Icons from CDN %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <%# Animate.css from CDN %>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet">
    <%# Flatpickr CSS from CDN %>
    <link href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" rel="stylesheet">
    <%# Tippy.js base CSS (required for arrow and positioning) - always latest %>
    <link href="https://unpkg.com/tippy.js@latest/dist/tippy.css" rel="stylesheet">
    <%# Tippy.js light-border theme - always latest %>
    <link href="https://unpkg.com/tippy.js@latest/themes/light-border.css" rel="stylesheet">
    <%# Custom Oroshi styles (app-specific, non-Bootstrap) %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <%= yield :head %>
</head>

<body data-spy="scroll" class="d-flex flex-column h-100" data-oroshi-mount-path="<%= oroshi_mount_path %>">
    <%= render partial: 'layouts/shared/navbar' %>

    <main class="flex-shrink-0">
        <div id="messages-container" data-controller="messages" data-user-id="<%= current_user.id if user_signed_in? %>" class="d-flex overflow-x-auto overflow-y-visible bg-light mb-3 p-1" data-turbo-permanent>
            <%= turbo_frame_tag 'messages', class: 'd-flex flex-nowrap', data: { messages_target: 'messagesList' } do %>
            <% end %>
        </div>

        <%= yield %>

        <%# Onboarding checklist is now in navbar dropdown %>

        <% if user_signed_in? && !current_user.approved? %>
        <div class="container m-3">
            <div class="card bg-warning text-white m3">
                <div class="card-body">
                    <h5><%= t('layouts.application.approval.pending') %></h5>
                </div>
            </div>
        </div>
        <% end %>

        <% if user_signed_in? %>
        <div id="notifications" data-turbo-permanent>
            <!-- Alerts -->
            <% if notice %>
            <div class="container notice_container mt-2" data-controller="notification" data-notification-delay-value="3000">
                <div class="alert alert-success d-flex justify-content-between align-items-center">
                    <span><%= notice %></span>
                    <button type="button" class="btn-close" data-action="notification#hide"></button>
                </div>
            </div>
            <% end %>
            <% if alert %>
            <div class="container alert_container mt-2" data-controller="notification" data-notification-delay-value="4000">
                <div class="alert alert-danger d-flex justify-content-between align-items-center">
                    <span><%= alert %></span>
                    <button type="button" class="btn-close btn-close-white" data-action="notification#hide"></button>
                </div>
            </div>
            <% end %>
        </div>
        <% end %>
    </main>

    <%= render 'layouts/shared/footer' %>
</body>

</html>