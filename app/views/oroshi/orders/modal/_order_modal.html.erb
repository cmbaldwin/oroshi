<div id="orderModal" data-controller="oroshi--orders--order-dialog" data-action="click->oroshi--orders--order-dialog#backdropClose" data-oroshi--orders--order-dashboard-target="orderModal">
    <dialog data-oroshi--orders--order-dialog-target="dialog" class="order-modal">
        <div class="modal-header border-bottom">
            <div class="modal-title w-100 d-flex flex-column gap-1 justify-content-center align-items-center align-middle" id="orderActionModalLabel">
                <div class="fs-5"><%= t('oroshi.orders.modal.panel_title') %></div>
                <div class="d-flex fs-6" id="date_title">
                </div>
            </div>
            <button type="button" class="btn-close" data-action="oroshi--orders--order-dialog#close" aria-label="Close"></button>
        </div>
        <div class="modal-body p-2">
            <%= turbo_frame_tag 'orders_modal_content' do %>
            <%= render partial: 'oroshi/shared/spinner' %>
            <% end %>
        </div>
        <div class="modal-footer border-top mt-2">
            <button type="button" class="btn btn-secondary" data-action="oroshi--orders--order-dialog#close"><%= t('common.buttons.close') %></button>
        </div>
    </dialog>
    <button type="button" style="display: none;" data-oroshi--orders--order-dialog-trigger="true"></button>
</div>