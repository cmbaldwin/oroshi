<%= turbo_frame_tag 'oroshi_modal_content', class: 'modal-content' do  %>
  <div class="modal-header">
    <h5 class="modal-title"><%= t('layouts.modals.title') %></h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
  </div>
  <div class="modal-body">
    <p><%= t('layouts.modals.content') %></p>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><%= t('common.buttons.close') %></button>
  </div>
<% end %>