<h2 class="mb-4"><%= t('.title') %></h2>

<p class="text-muted mb-4">
  <%= t('.description') %>
</p>

<% settings = Setting.find_or_initialize_by(name: 'oroshi_company_settings') %>

<%= f.fields_for :company_settings do |osf| %>
  <div class="row">
    <div class="col-12 mb-3">
      <%= osf.label 'name', "#{t('oroshi.onboarding.labels.company_name')} *", class: 'form-label' %>
      <%= osf.text_field 'name',
                  placeholder: t('oroshi.onboarding.placeholders.company_name'),
                  value: get_setting(settings, 'name'),
                  required: true,
                  class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 mb-3">
      <%= osf.label 'postal_code', "#{t('oroshi.onboarding.labels.postal_code')} *", class: 'form-label' %>
      <div class="input-group">
        <span class="input-group-text">〒</span>
        <%= osf.text_field 'postal_code',
                            placeholder: '〇〇〇-〇〇〇〇',
                            value: get_setting(settings, 'postal_code'),
                            required: true,
                            class: 'form-control' %>
      </div>
    </div>

    <div class="col-md-8 mb-3">
      <%= osf.label 'address', "#{t('oroshi.onboarding.labels.address')} *", class: 'form-label' %>
      <%= osf.text_field 'address',
                  placeholder: '〇〇県〇〇市〇〇町〇〇-〇〇-〇〇',
                  value: get_setting(settings, 'address'),
                  required: true,
                  class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= osf.label 'phone', t('oroshi.onboarding.labels.phone'), class: 'form-label' %>
      <%= osf.text_field 'phone',
                  placeholder: '〇〇〇-〇〇〇-〇〇〇〇',
                  value: get_setting(settings, 'phone'),
                  class: 'form-control' %>
    </div>

    <div class="col-md-6 mb-3">
      <%= osf.label 'fax', t('oroshi.onboarding.labels.fax'), class: 'form-label' %>
      <%= osf.text_field 'fax',
                  placeholder: '〇〇〇-〇〇〇-〇〇〇〇',
                  value: get_setting(settings, 'fax'),
                  class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= osf.label 'mail', t('oroshi.onboarding.labels.mail'), class: 'form-label' %>
      <%= osf.text_field 'mail',
                  placeholder: 'info@domain.com',
                  value: get_setting(settings, 'mail'),
                  class: 'form-control' %>
    </div>

    <div class="col-md-6 mb-3">
      <%= osf.label 'web', t('oroshi.onboarding.labels.web'), class: 'form-label' %>
      <%= osf.text_field 'web',
                  placeholder: 'www.domain.com',
                  value: get_setting(settings, 'web'),
                  class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= osf.label 'invoice_number', t('oroshi.onboarding.labels.invoice_number'), class: 'form-label' %>
      <%= osf.text_field 'invoice_number',
                  placeholder: 'T1234567890123',
                  value: get_setting(settings, 'invoice_number'),
                  class: 'form-control' %>
      <div class="form-text"><%= t('oroshi.onboarding.labels.invoice_number_help') %></div>
    </div>
  </div>
<% end %>
